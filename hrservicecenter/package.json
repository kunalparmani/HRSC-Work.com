{
    "name": "salesforce-app",
    "private": true,
    "version": "1.0.0",
    "description": "Salesforce App",
    "scripts": {
        "clean:branches": "git branch -vv | grep origin | grep ': gone]' | awk '{print $1}'| xargs -L 1 git branch -D",
        "lint": "npm run lint:lwc",
        "lint:lwc": "eslint force-app",
        "scan": "sfdx scanner:run --category \"Variables,Possible Errors,Error Prone,Security,Performance\" --target \"force-app/**/classes/*,force-app/**/lwc/**\"",
        "scan:ci": "sfdx scanner:run --category \"Variables,Possible Errors,Error Prone,Security,Performance\" --target \"force-app/**/classes/*,force-app/**/lwc/**\" --format junit --outfile ./scan-junit.xml",
        "test": "npm run test:unit",
        "test:clear:cache": "sfdx-lwc-jest -- --clearCache",
        "test:unit": "sfdx-lwc-jest -- --runInBand",
        "test:unit:watch": "sfdx-lwc-jest --watch",
        "test:unit:debug": "sfdx-lwc-jest --debug",
        "test:unit:coverage": "sfdx-lwc-jest --coverage --verbose -- --runInBand --ci --testLocationInResults --outputFile=clover-output.xml",
        "test:apex": "sfdx force:apex:test:run -r human -w 30",
        "test:apex:coverage": "npm run test:apex -- -c",
        "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
        "prettier:verify": "prettier --apex-standalone-parser built-in --list-different \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
        "prettier:standalone": "`start-apex-server >/dev/null 2>&1 &` && `while ! nc -z localhost 2117; do sleep 1; done;` && prettier --apex-standalone-parser built-in --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\" && `stop-apex-server >/dev/null 2>&1 &`",
        "prettier:verify:standalone": "`start-apex-server >/dev/null 2>&1 &` && `while ! nc -z localhost 2117; do sleep 1; done;` && prettier --apex-standalone-parser built-in --list-different \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\" && `stop-apex-server >/dev/null 2>&1 &`",
        "label:check": "./scripts/find_unused_labels.sh",
        "qualitygate:prepush": "npm run lint && npm test",
        "watch": "npx nodemon"
    },
    "devDependencies": {
        "@prettier/plugin-xml": "^0.7.2",
        "@salesforce/eslint-config-lwc": "^0.8.0",
        "@salesforce/sfdx-lwc-jest": "^0.10.4",
        "eslint": "^7.23.0",
        "husky": "^4.3.0",
        "jest-each": "^26.6.2",
        "lint-staged": "^10.5.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "prettier-plugin-apex": "^1.9.0",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run qualitygate:prepush",
            "pre-commit": "`start-apex-server >/dev/null 2>&1 &` && `while ! nc -z localhost 2117; do sleep 1; done;` && lint-staged && `stop-apex-server >/dev/null 2>&1 &`"
        }
    },
    "lint-staged": {
        "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
            "prettier --apex-standalone-parser built-in --write"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "force-app"
        ],
        "exec": "sfdx force:source:push -f",
        "ext": "cls,xml,json,js,trigger,cpm,css,design,svg,html",
        "delay": "3000"
    }
}
